{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "title": "Parlamentswahlen",
  "properties": {
    "title": {
      "title": "Titel",
      "type": "string",
      "Q:options": {
        "placeholder": "Der Titel bringt die Kernaussage der Grafik auf den Punkt, zB&#46; 'Die CVP stürzt ab'&#46;"
      }
    },
    "subtitle": {
      "title": "Untertitel",
      "type": "string",
      "Q:options": {
        "placeholder": "Der Untertitel benennt präzise, um welche Wahl es sich handelt&#46;"
      }
    },
    "threshold": {
      "title": "Prozenthürde",
      "type": "number",
      "Q:options": {
        "step": "0.01",
        "placeholder": "Falls eine Prozenthürde exisitert, bitte Zahl eintragen&#46;"
      }
    },
    "parties": {
      "title": "Parteien",
      "type": "array",
      "Q:options": {
        "expandable": {
          "itemLabelProperty": "name"
        }
      },
      "items": {
        "type": "object",
        "title": "Partei",
        "properties": {
          "name": {
            "title": "Parteiname",
            "type": "string"
          },
          "color": {
            "title": "Parteifarbe",
            "type": "object",
            "Q:options": {
              "compact": true,
              "availabilityChecks": [
                {
                  "type": "UserHasRole",
                  "role": "expert-election-votes"
                }
              ]
            },
            "properties": {
              "colorCode": {
                "title": "Farbcode",
                "type": "string",
                "Q:type": "color"
              },
              "classAttribute": {
                "title": "CSS Klassenname",
                "type": "string",
                "Q:options": {
                  "placeholder": "s-viz-color-party-&#46;&#46;&#46;"
                }
              }
            }
          },
          "percentage": {
            "title": "Stimmen in %",
            "type": "number",
            "Q:options": {
              "step": "0.01"
            }
          },
          "previous": {
            "title": "Stimmen vergangene Wahl in %",
            "type": "number",
            "Q:options": {
              "step": "0.01",
              "placeholder" : "Die Veränderung von der vergangenen zur aktuellen Wahl wird dann automatisch berechnet&#46;"
            }
          }
        },
        "required": [
          "name"
        ]
      }
    },
    "notes": {
      "title": "Anmerkungen",
      "type": "string"
    },
    "sources": {
      "title": "Quelle(n)",
      "type": "array",
      "items": {
        "type": "object",
        "title": "Quelle",
        "properties": {
          "text": {
            "title": "Quelle",
            "type": "string"
          },
          "link": {
            "Q:type": "link",
            "title": "Link",
            "type": "object",
            "properties": {
              "url": {
                "title": "Link",
                "type": "string",
                "Q:options": {
                  "placeholder": "Direktlink zur Quelle, http://&#46;&#46;&#46;"
                }
              },
              "isValid": {
                "type": "boolean"
              }    
            }
          }
        },
        "required": ["text"]
      }
    },
    "options": {
      "title": "Optionen",
      "type": "object",
      "Q:options": {
        "availabilityChecks": [
          {
            "type": "UserHasRole",
            "role": "expert-election-votes"
          }
        ]
      },
      "properties": {
        "hideUpdatedDate": {
          "title": "Aktualisierungsdatum ausblenden",
          "type": "boolean",
          "default": false
        }
      }
    }
  },
  "required": [
    "title"
  ]
}
