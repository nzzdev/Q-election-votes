{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "title": {
      "type": "string"
    },
    "subtitle": {
      "type": "string"
    },
    "annotations": {
      "type": "string"
    },
    "updatedDate": {
      "type": "string"
    },
    "sources": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "text": {
            "type": "string"
          },
          "href": {
            "type": "string"
          },
          "validHref": {
            "type": "boolean"
          }
        }
      }
    },
    "data": {
			"type": "object",
			"properties": {
        "notes" : {
          "type": "string"
        },
				"threshold": {
					"type": "string"
				},
        "intermediate": {
          "type": "boolean"
        },
        "parliament": {
          "type": "string",
          "Q:enum": {
            "type": "remote",
            "path": "/data/parliaments"
          }
        },
				"parties": {
					"type": "array",
          "Q:default": {
            "type": "value-depending",
            "key": "parliament:data/parliament",
            "path": "data/parties?parliament={parliament}"
          },
					"items": {
						"type": "object",
						"properties": {
							"name": {
								"type": "string"
							},
              "colour": {
                "type": "string"
              },
							"percentage": {
								"type": "number"
							},
							"previous": {
								"type": "number"
							}
						}
					}
				}
			}
		}
  },
  "required": [
    "title",
    "data"
  ]
}
