{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "title": "Parlamentswahlen",
  "properties": {
    "title": {
      "title": "Titel",
      "type": "string"
    },
    "subtitle": {
      "title": "Untertitel",
      "type": "string"
    },
    "threshold": {
      "title": "% Hürde",
      "description": "Falls eine % Hürde exisitert, bitte Prozentzahl eintragen",
      "type": "number",
      "Q:options": {
        "step": "0.01"
      }
    },
    "parties": {
      "title": "Parteien",
      "type": "array",
      "Q:options": {
        "expandable": {
          "itemLabelProperty": "name"
        }
      },
      "items": {
        "type": "object",
        "title": "Partei",
        "properties": {
          "name": {
            "title": "Parteiname",
            "type": "string"
          },
          "color": {
            "title": "Farbe",
            "type": "object",
            "Q:options": {
              "compact": true
            },
            "properties": {
              "colorCode": {
                "title": "Farbcode (Hex-Wert oder vordefinierter CSS Farbname, z.B. green)",
                "type": "string"
              },
              "classAttribute": {
                "title": "CSS Klassenname",
                "type": "string"
              }
            }
          },
          "percentage": {
            "title": "Stimmen in %",
            "type": "number",
            "Q:options": {
              "step": "0.01"
            }
          },
          "previous": {
            "title": "Stimmen letzte Wahl in %",
            "type": "number",
            "Q:options": {
              "step": "0.01"
            }
          }
        },
        "required": [
          "name"
        ]
      }
    },
    "notes": {
      "title": "Bemerkungen",
      "type": "string"
    },
    "sources": {
      "title": "Quellen",
      "type": "array",
      "items": {
        "type": "object",
        "title": "Quelle",
        "properties": {
          "text": {
            "title": "Text",
            "type": "string"
          },
          "link": {
            "Q:type": "link",
            "title": "Link",
            "type": "object",
            "properties": {
              "url": {
                "title": "Url",
                "type": "string"
              },
              "isValid": {
                "type": "boolean"
              }    
            }
          }
        }
      }
    }
  },
  "required": [
    "title"
  ]
}
